function showModal() {
    $('#myModal').css('display', 'block');
}

// Function to hide the modal
function hideModal() {
    $('#myModal').css('display', 'none');
}

// Function to call the /qr API and display the QR code in the modal
function showQRCode(qrCodeData) {
    $('#qrImage').attr('src', qrCodeData);
    showModal();
}

// Open the modal when clicking on the "View QR Code" button
$(document).on('click', '.view-qr-button', function() {
    var upiQrCode = $(this).data('upi-qrcode');
    $.ajax({
        url: '/qr',
        method: 'POST',
        data: { upiQrCode: upiQrCode },
        dataType: 'json',
        success: function(data) {
            showQRCode(data.qr_code);
        },
        error: function() {
            alert('Failed to fetch QR code data.');
        }
    });
});

// Close the modal when clicking on the close button (x)
$('.close').click(function() {
    hideModal();
});

// Close the modal when clicking outside the modal content
$(window).click(function(event) {
    if (event.target == $('#myModal')[0]) {
        hideModal();
    }
});
